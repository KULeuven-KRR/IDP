vocabulary V {
  type node
  type color 
  red : color
  blue : color
  edge(node, node)
  node_color(node) : color
}
structure S : V {
  color = { "red"; "green"; "blue" }
  red = "red"
  blue = "blue"
  node = { "A"; "B"; "C"; "D"; "E" }
  edge = { "A","B"; "B","C"; "C","B"; "C","D" }
}
theory T : V {
  !x[node], y[node] :
    edge(x,y) => node_color(x) ~= node_color(y).
  card { x[node] : node_color(x) = red } >= 2.
}
term n_blue : V {
  card { x[node] : node_color(x) = blue } 
}
