/****************************
   Graph Colouring Problem
****************************/

vocabulary V{
	type Colour 
	type Vtx
	Edge(Vtx,Vtx)
	Colouring(Vtx) : Colour
}

theory T: V{
	// Neighbours cannot have the same colour.
	 ! n1 n2 : Edge(n1,n2) =>  Colouring(n1) ~= Colouring(n2).
}

aspstructure S: V{
	Colour(red).
	Colour( blue).
	Colour(yellow).
	Vtx(1).
	Vtx(2).
	Vtx(3).
	Vtx(4).
	Edge(1,2).
	Edge(1,3).
	Edge(2,4).
}

procedure getExpectedNbOfModels(){
	return 24
}
